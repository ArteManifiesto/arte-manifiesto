.featured
	&-container
		margin-top 10px
		margin-bottom 60px
	&-flex
		display flex
		flex-wrap wrap
		justify-content center
	&-border
		img
			border 1px solid #ddd
			box-sizing border-box
	&-w580
		flex 1
		border 10px solid white
		min-width 350px
		img
			width 100%
			height 100%
		a
			display block
			transition 0.2s
		a:hover
			filter brightness(80%)
	&-w280
		flex 1
		border 10px solid white
		img
			width 100%
			height 100%
		a
			display block
			transition 0.2s
		a:hover
			filter brightness(80%)
	&-c580
		flex 1
		display flex
		min-width 370px
		justify-content space-between