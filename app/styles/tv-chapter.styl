.contenedor
	width 100%
	display flex
	justify-content center
	&-video
		width 100%
		height 450px
.sub-contenedor
	width 100%
	display flex
	justify-content center
		width 50%
		height 450px
.description 
	width 100%
	display flex
	justify-content space-around
	align-items baseline
	background-color rgba(0, 0, 0, 0.06)
	&-likes
		width 146px
		height 82px
		align-items space-around
		justify-content space-around
		display flex
		flex-direction column
		&-logos
			display flex
			justify-content space-around
		&-redes
			display flex
			justify-content space-around
	&-likes h3
		font-size 15px
		font-weight bold
		font-family Montserrat
	&-texto
		width 887px
		text-align left
		display flex
		flex-direction column
		justify-content center
		padding 25px 0px
	&-texto h3
		font-family Montserrat
		font-size 26px
		color #000
		margin 0 5px 0
	&-texto p
		font-family sans-serif
		font-size 18px
		color #000
		margin 10px 5px 0
	&-texto span
		font-family sans-serif
		font-size 12px
		color #000
		margin 15px 5px 0
.fa-heart
	color red
.fa-facebook
	border-radius 47%
	padding 10px
	color #fff
	width 15px
	background-color #888
.fa-twitter
	border-radius 47%
	padding 10px
	color #fff
	background-color #888
.fa-instagram
	border-radius 47%
	padding 10px
	color #fff
	background-color #888
.informacion h2
	font-size 27px
	font-family Montserrat
	font-weight bold
	padding 6px 0
.informacion
	padding 9px 80px
	&-division
		width 100%
		display flex
		justify-content space-between
		&-texto
			width 720px
			&-imagen
				margin 15px 0
			&-imagen img
				height 353px
				width 100%
		&-texto p
			font-family sans-serif
			padding 8px 0px
		&-texto h2
			font-size 20px !important
		&-baners
			width 240px
			display flex
			flex-direction column
			&-cuadros
				border 1px solid #ececec
				background-color #ececec
				width 240px
				height 350px
				margin 20px 0
.am-Footer
	background #3c3d41
	margin-top 200px
@media (max-width: 1150px)
	.informacion-division-texto
		width 673px
@media (max-width: 1100px)
	.informacion-division-texto
		width 565px
	.informacion-division-texto p
		text-align justify
	.description-likes
		width 251px
		padding 39px
	.description-texto
		width 100%
		padding 25px 27px
@media (max-width: 995px)
	.informacion-division
		flex-wrap wrap
	.informacion-division-baners
		width 100%
		flex-direction row
		justify-content space-around
	.informacion-division-texto
		width 100%