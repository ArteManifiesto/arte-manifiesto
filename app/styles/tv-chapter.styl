.metadata-chapter
	display flex
	flex-direction column
	input,
	textarea
		padding 15px 10px
		font-size 16px
		border 1px solid #ddd
		margin-bottom 10px
		border-radius 5px
	textarea
		height 100px

.chapter-banner
	width 100%
	height 80px
	background-size cover
	margin-bottom 40px
	
.chapter-details
	background-color rgba(0, 0, 0, 0.06)
	display flex
	justify-content center
	padding 20px 0
	.content
		padding 0 10px
		max-width 1180px
		display flex
		.info
			flex-grow 1
			h1
				font-family 'Montserrat'
				font-size 18.3px
				font-weight bold
				color #202124
			p
				margin-top 5px
				font-family 'Arial'
				font-size 14.2px
				font-weight normal
				line-height 1.69
				color #202124
		.share
			flex-shrink 0
			padding 0 20px
			p
				font-family 'Montserrat'
				font-size 12px
				font-weight normal
				letter-spacing 0.5px
				color #000000
		.social
			margin-top 5px
			display flex
			.share-fb,
			.share-tw
				width 40px
				height 40px
				border-radius 50%
				display flex
				justify-content center
				align-items center
				font-size 20px
				color white
				i
					margin-top 3px
					margin-left 7px
			.share-fb
				background-color #33599d
			.share-tw
				margin-left 10px
				background-color #4daaf7
		
