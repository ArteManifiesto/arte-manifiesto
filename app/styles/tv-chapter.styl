.chapter-inner-wrapper
	max-width 1200px
	margin 0 auto
	display flex
	justify-content space-between
	flex-wrap wrap
	padding 0 20px
	.chapter-content
		max-width 700px
		h1
			font-family 'Montserrat'
			font-size 25px
			color #202124
			margin 20px 0
		.description
			font-family 'PT Serif'
			font-size 18px
			line-height 1.3
			color black	
		.users-container
			.grid-item
				display inline-block
				width 230px

