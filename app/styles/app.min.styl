/*------------------------------------*
	$ ARTIST CARD
*------------------------------------*/
.artist-card
	border solid 1px #ddd
	position relative
	&-info
		display flex
		align-items center
		padding 10px
		img
			height 50px
			width 50px
			border-radius 50%
			margin-right 10px
		p
			font-family 'Montserrat', sans-serif
			font-size 10px
			color #666
			&:not(:last-child)
				padding-bottom 5px
		.name
			font-weight bold
	&-works
		display flex
		flex-wrap wrap
	&-work
		width 50%
		height 110px
		background-size cover
		background-position center center
	&-follow
		padding 12px
		button
			display table
			margin auto


/*------------------------------------*
	$ COLLECTION CARD
*------------------------------------*/
.collection-card
	border solid 1px #ddd
	// position relative
	&-stats
