/*------------------------------------*
	$ HEADER
*------------------------------------*/
.am-Header
	display flex
	justify-content space-between
	align-items center
	&-logo
		// max-width 200px
		max-width 30px
		.large
			display none
		img
			width 100%
	&-menu
		display flex
		align-items center
		// &-item:not(:first-child)
		// 	padding-left 44px
		&-item
			.am-Header-text
				display block
				padding 10px 15px
			.am-Signin-button
				margin-left: 10px;
		.upload
		.cart
			margin 0 10px
		p
		.upload
		.cart
			display none
		.am-Avatar
			margin-left 10px

@media (min-width: 550px)
	.am-Header
		&-logo
			max-width 200px
			.large
				display block
			.small
				display none

@media (min-width: 650px)
	.am-Header
		&-menu
			.desktop
				p
					display block
				i
					display none

@media (min-width: 700px)
	.am-Header
		&-menu
			.upload
				display block

@media (min-width: 768px)
	.am-Header
		&-menu
			&-item
				.am-Header-text
				.am-Signin-button
					margin-left 24px

@media (min-width: 830px)
	.am-Header
		&-menu
			.cart
				display block

@media (min-width: 900px)
	.am-Header
		&-menu
			.upload
			.cart
				margin 0 15px
			.am-Avatar
				margin-left 15px



.am-Avatar
	display flex
	align-items center
	cursor pointer
	position relative
	&:hover
		.user-menu
			display block
	img
		width 50px
		height 50px
		border-radius 50%
	i
		font-size: 12px;
	.user-menu
		position absolute
		right 0
		transform translate(0, 50px)
		background white
		z-index: 1;
		width 218px
		display none
		border: solid 1px #ddd;
		border-radius: 4px;
		&-item
			font-family: 'Montserrat',sans-serif;
			letter-spacing: 2px;
			font-weight: bold;
			// text-transform: uppercase;
			font-size: 10.5px;
			// cursor: pointer;
			color: #3b3d40;
			display: block;
			padding: 20px;


