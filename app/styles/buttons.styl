/*------------------------------------*
	$ BUTTONS
*------------------------------------*/
.am-Signin-button
	font-family 'Montserrat', sans-serif
	background dark-seafoam-green
	border-radius 100px
	letter-spacing 2px
	padding 8px 12px
	font-weight bold
	font-size 11px
	color white

.am-Upload-button
	font-family 'Montserrat', sans-serif
	background #277cea
	border-radius 4px
	letter-spacing 2px
	padding 8px 10px
	font-weight bold
	font-size 11px
	color white

.am-More-button
	background #2e71f0
	border-radius 4px
	color white
	font-family 'Montserrat', sans-serif
	font-size 15px
	font-weight bold
	padding 13px
	display: block;
	text-align center
	cursor pointer

.am-Switch-button
	background: #ccc;
	border-radius: 32px;
	width: 38px;
	height: 20px;
	display: flex;
	align-items: center;
	padding: 0 1px;
	cursor pointer
	i
		width: 17px;
		height: 16.8px;
		background: #fff;
		border-radius: 32px;
		font-size: 0.25em;
		color: #ddd;
		display: flex;
		align-items: center;
		justify-content: center;
	&[data-state="active"]
		justify-content: flex-end;
		background: #88d68f;

.am-Follow-button
	border-radius 4px
	border solid 1px #ddd
	background white
	padding 10px
	font-family 'Montserrat', sans-serif
	font-weight bold
	font-size 10.6px
	color #666
	letter-spacing 2px
	cursor pointer

.am-View-button
	background #2e71f0
	border-radius 17px
	padding 8px 15px
	letter-spacing 2px
	font-family 'Montserrat', sans-serif
	font-weight bold
	font-size 10px
	color white
	cursor pointer
	i
		font-size 15px
	&.expand
		width 100%
		max-width 200px