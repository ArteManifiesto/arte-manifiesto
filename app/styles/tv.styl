.wrapper-tv
	width 100%
	.banner-video-tv
		width 100%
		height auto
		background-color #d8d8d8
		position relative
		.background-video-tv
			width 100%
			height auto
			position absolute
			.container-video-tv
				position relative
				padding-bottom 56.25%
				padding-top 30px
				height 0
				overflow hidden
			.container-video-tv iframe, .container-video-tv object, .container-video-tv embed
				position absolute
				top 0
				left 0
				width 100%
				height 100%
		.shadow-video-tv
			background-color rgba(0,0,0,0.6)
			width 100%
			height 100%
			position relative
			.menu-video-tv
				display flex
				align-items center
				justify-content space-between
				box-sizing border-box
				padding 0 20px
				max-width 1200px
				margin 0 auto
				font-family Montserrat
				font-weight bold
			.menu-video-tv h3
				font-size 48px
				color #eeeeee
				margin 42px 0 0 0
			.menu-video-tv a
				border 1px solid #eeeeee
				padding 18px 31px
				border-radius 48px
				margin 42px 0 0 0
				color #eeeeee
				font-size 10px
			.text-video-tv
				max-width 1200px
				text-align center
				position absolute
				bottom 0
				left 50%
				transform translateX(-50%)
				margin-bottom 51px
			.text-video-tv h3
				font-family Montserrat
				font-weight bold
				color #ffffff
				font-size 48px
				line-height 1.22
				letter-spacing -1.8px
				margin-bottom 15px
			.text-video-tv p
				font-family Montserrat
				color #ffffff
				font-size 20px
				line-height 1.3
				margin-bottom 31px
				opacity 0.7
			.text-video-tv a
				font-family Montserrat
				font-weight bold
				padding 11px 14px
				border-radius 2px
				color #eeeeee
				font-size 13px
				background-color #fc2015
	.chapters-tv
		max-width 1200px
		margin 0 auto
		.title-chapters-tv
			border-bottom 1px solid rgba(0 0 0 0.2)
		.title-chapters-tv::after
			border-bottom 2px solid #0000ff
			width 30px
			display block
			content ""
		.title-chapters-tv h4
			font-family Montserrat
			font-weight bold
			color #202124
			font-size 25px
			text-align left



