	width 100%
	height 500px
	background-color #000
	&-text
		display flex
		flex-direction column
		z-index 2
		color #fff
		align-items center
		margin-top 240px
	&-text h3
		z-index 2
		font-size 44px
		font-family montserrat
		padding 5px 0
		font-weight bold
	&-text p
		z-index 2
		font-size 22px
		text-align center
		font-family PTSerif-Regular
.container video
	width 100%
	height 500px
	position absolute
	left 0
	top 0
