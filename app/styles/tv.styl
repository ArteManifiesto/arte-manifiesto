.wrapper
	max-width 1200px
	position relative
	margin 0 auto
.container
	width 100%
	height 500px
	background-color #000
	&-text
		display flex
		flex-direction column
		z-index 2
		color #fff
		align-items center
		margin-top 240px
	&-text h3
		z-index 2
		font-size 44px
		font-family montserrat
		padding 5px 0
		font-weight bold
	&-text p
		z-index 2
		font-size 20px
		text-align center
		font-family PTSerif-Regular
.container iframe
	width 100%
	height 500px
	position absolute
	left 0
	top 0
.container subBarra
	width 100%
	display flex
	justify-content space-around
.subList
	display flex
	align-items	baseline
	&-title
		font-size 40px
		padding 20px 0px 20px 120px
		font-family Montserrat
		font-weight bold
		color #fff
		width 800px
		z-index 2
	&-item
		padding 30px
		color #fff
		font-family Montserrat
		font-size 13px
		z-index 2
.contest-btn
	z-index 2
hr
	margin-bottom 30px
.subList li
	z-index 2
.buttom
	width 100px
	font-family montserrat
	background-color red
	color #fff
	z-index 2
	padding 13px
	margin 17px 0
.contest
	border 1px solid #fff
	padding 15px 20px
	border-radius 40px
	margin-right 100px
.info h2
	font-size 27px
	font-family Montserrat
	font-weight bold
	padding 20px 0 0
.likes
	display flex
	&-logo
		width 35px
		display flex
		margin-bottom 20px
		align-items baseline
		justify-content space-between
.shadow
	width 100%
	height 500px
	position absolute
	left 0
	top 0
	background-color rgba(0, 0, 0, 0.8)
	
.subline
	width 15px
	border 2px solid #0000ff
	margin-bottom 40px
	
.info
	padding 9px 0
	max-width 980px
	margin 0 auto
	&-text
		display flex
		justify-content space-between
		padding-bottom 10px
		border-bottom 1px solid #ececec
		&-icon h3
			margin-bottom 10px
			font-size 12px
			text-align center
			font-family montserrat
		&-icon
			flex-direction column
			display flex
			align-items center
			&-social
				display flex
				width 177px
				justify-content space-around
	&-data
		width 100%
		display flex
		justify-content space-between
		&-text
			&-imagen
				margin 15px 0
			&-imagen img
				height 353px
				width 100%
		&-text a
			color #000
		&-text video
			width 100%
			height 300px
		&-text p
			font-family PTSerif-Regular
			padding 8px 0px
		&-text h2
			font-size 20px !important
		&-text img
			height auto
		&-baners
			width 240px
			display flex
			flex-direction column
			&-view
				border 1px solid #ececec
				background-color #ececec
				width 240px
				height 350px
.inner-container
	display flex
	justify-content space-between
	
.draft-chapters-container
	max-width 1200px
	display flex
	flex-wrap wrap
	justify-content space-around
	margin 0 auto
	.info-data
		max-width 500px