*------------------------------------*/
.am-Search-input
	border-radius 50px
	overflow hidden
	display flex
	input
		padding 10px 20px
		flex 1
		color #868686
		font-family 'Montserrat', sans-serif
	i
		background #85d78d
		padding 8px 20px 12px 16px
		color white
		cursor pointer
		font-size 1.35em

.am-Email-input
	border-radius 4px
	overflow hidden
	display flex
	input
		font-family 'Montserrat', sans-serif
		background #2e2e30
		padding 10px 17px
		font-size 14px
		color #868686
		flex 1
	i
		background #8bd393
		font-size 1.15em
		padding 10px
		color white