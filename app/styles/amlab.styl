.amlab
	&-button
		text-decoration none
		font-family Montserrat
		font-size 10px
		font-weight bold
		color #ffffff
		letter-spacing 2px
		background-color #0076ec
		border-radius 40px
		padding 16px 46.6px 16px 46.6px
		display inline-block
		&-hollow
			text-decoration none
			font-family Montserrat
			font-size 10px
			font-weight bold
			color #ffffff
			letter-spacing 2px
			border 1px solid rgba(231,231,231,0.3)
			border-radius 40px
			padding 16px 19.5px 16px 19.5px
			display inline-block
		&-dark
			text-decoration none
			font-family Montserrat
			font-size 10px
			font-weight bold
			color #ffffff
			letter-spacing 2px
			background-color #393d3f
			border-radius 40px
			padding 16px 29.1px 16px 29.1px
			display inline-block
	&-wrapper
		width 100%
	&-banner
		img
			width 100%
			display block
	&-container
		width 100%
		background-color #393d3f
		display flex
		align-items center
		&-text
			width 100%
			max-width 1280px
			margin-left auto
			margin-right auto
			text-align center
			color #ffffff
			&-title
				font-family Montserrat
				font-size 10px
				font-weight bold
				letter-spacing 2px
				margin-top 90px
			&-parag
				font-family PTSerif
				font-size 32px
				letter-spacing -0.5px
				max-width 528px
				margin 40px auto 82px auto
			a
				margin-bottom 90px
	&-boxes
		display flex
		flex-wrap wrap
		max-width 1280px
		margin-left auto
		margin-right auto
		justify-content center
		&-box
			width 50%
			display flex
			align-items center
			justify-content center
			img
				width 100%
				display block
			&-text
				margin-right 17%
				margin-left 17%
				color #333333
				&-title
					font-family Montserrat
					font-size 11px
					font-weight bold
					letter-spacing 2px
				&-subtitle
					font-family Montserrat
					font-size 32px
					font-weight bold
					letter-spacing -1px
					margin-top 20px
					margin-bottom 20px
				&-parag
					font-family PTSerif
					font-size 18px
					line-height 1.28
					color #000000
					margin-top 20px
					margin-bottom 57px
				a
					margin-bottom 11px
				img
					width auto
					margin-left auto
					margin-right auto
					margin-top 30px
					display none
	&-map
		width 100%
		background-image url(http://res.cloudinary.com/arte-manifiesto/image/upload/v1475516604/map_zwhxec.png)
		background-repeat no-repeat
		background-size cover
		&-text 
			width 100%
			margin-left auto
			margin-right auto
			text-align center
			background-color rgba(0,0,0,0.4)
			overflow hidden
			p
				font-family Montserrat
				font-size 20px
				font-weight bold
				letter-spacing -0.6px
				color #ffffff
				text-shadow 0 2px 4px rgba(0,0,0,0.5)
				margin-top 75px
				margin-bottom 36px
			a
				margin-bottom 132px
			img
				display block
				margin-left auto
				margin-right auto
				margin-bottom 34px
@media screen and (max-width: 900px)
	.amlab
		&-boxes
			:nth-child(3)
				order 4
			:nth-child(4)
				order 3
			:nth-child(5)
				order 5
			:nth-child(6)
				order 6	
			&-box
				width 100%
				&-text
					text-align center
					margin-left 6%
					margin-right 6%
					&-title
						margin-top 28px
					a
						margin-bottom 72px
					img
						display block
