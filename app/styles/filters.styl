l/*------------------------------------*
	$ SELECT
*------------------------------------*/
.am-Select
	font-family 'Montserrat', sans-serif
	border solid 1px #ddd
	color charcoal-grey
	letter-spacing 2px
	border-radius 4px
	position relative
	text-align center
	font-weight bold
	padding 16px 0
	font-size 11px
	cursor pointer
	i
		font-size 1.25em

/*------------------------------------*
	$ FILTER
*------------------------------------*/
.am-Filter
	border solid 1px #ddd
	border-radius 4px
	&-item
		&.selected
			background #eee
		&:not(:first-child)
			border-top solid 1px #ddd
		&.closed
			overflow hidden
			height 0
			border-top 0
	.am-Filter-option
		font-family 'Montserrat', sans-serif
		justify-content space-between
		letter-spacing 2px
		font-weight bold
		text-transform uppercase
		font-size 10.5px
		cursor pointer
		color #3b3d40
		display flex
		padding 20px
		i
			font-size .8em
			color #ccc
		&[data-open='true']
			i
				color #838d8f

	.am-Filter-header
		align-items center
		display flex
		i
			border-right solid 1px #ddd
			color rgba(#838d8f, .75)
			font-size 1.25em
			cursor pointer
			padding 15px
		p
			font-family 'Montserrat', sans-serif
			font-size 11.5px
			padding 0 15px
			color #393d3f

	.am-Filter-subOptions
		background #f7f7f7
		padding 20px
		li
		a
			display block
			font-family 'Montserrat', sans-serif
			font-size 12.4px
			cursor pointer
			color #838d8f
			&:not(:first-child)
				padding-top 10px

	.am-Filter-switch
		align-items center
		display flex
		padding 20px
		span
			font-family 'Montserrat', sans-serif
			padding-left 10px
			font-size 12.4px
			color #838d8f

.am-Filter.account
	background white
	display none
	max-width 580px
	margin-left auto
	margin-right auto
	.am-Filter-header
		p
			font-size 14px
			color #4a4a4a
	.am-Filter-subOptions
		background white
		li
		a
			display block
			font-size 14px
			color #9b9b9b
			&:not(:first-child)
				padding-top 20px
			&:last-child
				padding-bottom 5px
			&.selected
				color #2e71f0
	&.visible
		display block

@media (min-width: 1130px)
	.am-Filter.account
		float left
		margin-top -20px
		display block
	.account-title
		cursor auto !important
		i
			display none