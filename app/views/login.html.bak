{% extends './partials/base.html' %}


{% block elements %}
	<div class="am-register">
		<div class="am-register-box">
			<img class="logo-img" src="img/logo-small.png" />
			<img class="logo-text" src="img/logo-text-black.svg" />
			<p class="title">Ingresa a la plataforma</p>
			<div class="separator">
				<span class="line"></span><span class="text">FB SYNC</span><span class="line"></span>
			</div>
			<button class="button" data-color="blue"><i class="fa fa-facebook"></i>&nbsp;&nbsp; INGRESAR CON FACEBOOK</button>
			<div class="separator">
				<span class="line"></span><span class="text">CORREO</span><span class="line"></span>
			</div>
			<input class="input" type="text" placeholder="E-mail"></input>
			<input class="input u-margin-top-10" type="password" placeholder="Password"></input>
			<button class="button u-margin-top-10" data-color="green">INGRESAR A MI CUENTA</button>
			<div class="options">
				<p><input type="checkbox" id="remember"><label for="remember">Recordar mi cuenta</label></p>
				<a href="#">Olvidé mi cuenta</a>
			</div>
			<p class="change">¿Aún no tienes una cuenta? <a href="#">Regístrate</a></p>
		</div>
	</div>
{% endblock %}