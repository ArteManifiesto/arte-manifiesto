{% extends './partials/base.html' %}


{% block elements %}

	<div class="am-welcome am-checkout">
		<div class="cover" style="background-image: url(img/banners/welcome.png)"></div>
		<div class="grid-container">
			<div class="grid-100">
				<div class="checkout-box">
					<div class="checkout-menu">
						<p class="tab">1. CONFIRMA CARRO DE COMPRAS</p>
						<p class="tab">2. INGRESA DATOS DE ENVÍO</p>
						<p class="tab selected">3. ELIGE TU MÉTODO DE PAGO</p>
					</div>
					<div class="checkout-content">
						<div class="grid-container">
							<div class="grid-70">
								<p class="title">Elige tu método de pago</p>
							</div>
							<div class="grid-70">
								<div class="checkout-info">
									<div class="addresses">
										<div class="address">
											<input type="radio" name="payment">
											<p class="address-title">Pagar con Tarjeta de crédito</p>
										</div>
										<div class="address">
											<input type="radio" name="payment">
											<p class="address-title">Pagar con Paypal</p>
										</div>
										<div class="address">
											<input type="radio" name="payment">
											<p class="address-title">Pagar con Pago Efectivo</p>
										</div>
									</div>
								</div>
							</div>
							<div class="grid-30">
								<div class="checkout-resume">
									<div class="resume-box u-padding-bottom-10">
										<header>RESUMEN DE LA ORDEN</header>
										<section>
											<table>
												<tr>
													<td><p class="label">subtotal</p></td>
													<td><p class="price">S/.1300.00</p></td>
												</tr>
												<tr>
													<td><p class="label">transporte</p></td>
													<td><p class="price">S/.1300.00</p></td>
												</tr>
												<tr>
													<td><p class="label">igv</p></td>
													<td><p class="price">S/.1300.00</p></td>
												</tr>
												<tr>
													<td><p class="label" style="font-size: 18px;">total</p></td>
													<td><p class="price">S/. <span style="font-size: 18px;">1300.00</span></p></td>
												</tr>
											</table>
											<button class="button u-margin-top-20" data-color="blue">SEGUIR CHECKOUT</button>
										</section>
									</div>
									<div class="company">
										<img src="/img/company-logo.jpg">
									</div>
								</div>
							</div>
							<div class="grid-100">
								<div class="buttons-container">
									<button class="button" data-color="gray">< SEGUIR COMPRANDO</button>
									<button class="button" data-color="blue">SEGUIR CHECKOUT</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}