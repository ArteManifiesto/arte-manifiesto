@import 'base.styl'

@import 'elements/buttons.styl'
@import 'elements/inputs.styl'

.input
	font-size .9rem

.Profile
	max-width (max-width/1.5)
	margin auto
	padding .25rem
	&-section
		padding .25rem
		&-title
		&-input
		&-textarea
		&-avatar
			margin .5rem
		&-input
			display flex
			align-items center
			span
				letter-spacing 1px
				font-family 'Raleway'
				font-size .85rem
			div
				flex 1
		&-title
			font-size 1.15rem
		&-avatar
			&-img
				max-width 120px
				margin auto
				position relative
				&:hover
					.cover
						display flex
				.cover
					position absolute
					top 0
					width 100%
					height 100%
					background rgba(black, .25)
					// display flex
					display none
					i
						margin auto
						font-size 2rem
						// color rgba(white, .5)
						color white
					input
						position absolute
						top 0
						left 0
						height 100%
						width 100%
						opacity 0
						cursor pointer
			&-options
				display flex
				justify-content center
			&-option
				padding .5rem
				display flex
				align-items center
				label
					font-size .7rem

		&-options
			display flex
			flex-wrap: wrap;
			justify-content: center;
		&-option
			max-width 200px
			background #f6f6f6
			margin .5rem
			position relative
			cursor pointer
			.cover
				position absolute
				top 0
				left 0
				bottom 0
				width 100%
				display flex
				.fa
					margin auto
					color white
					font-size 2rem
					border-radius 50%
					padding .5rem
					background #f54545
					border solid 5px white
			img
			p
				padding .5rem
			p
				font-family: 'Raleway';
				cursor: pointer;
				font-size: 0.8rem;
				letter-spacing: 1px;
				text-align center
	button
		display table
		margin 1rem auto

.checkbox-list
	max-height 200px
	overflow auto
	&__item
		display flex
		align-items center
		padding .25rem
		font-family 'Raleway'
		cursor pointer
		font-size .8rem
		letter-spacing 1px
		&:hover
			background #eee
		span
			padding-left .25rem


@media (min-width: 720px)
	.carousel
		height: 10.65rem;

@media (min-width: 1000px)
	.Profile
		max-width (max-width/1.25)
	.column
		width 49.715%
		display inline-block
		vertical-align top
	.column2
		display: inline-block;
		vertical-align: top;
		// width: 44.9%;
		width: 45.813%;
		margin: 0 .5rem;

