	$ ACCOUNT
*------------------------------------*/
@import 'base.styl'

@import 'elements/buttons.styl'
@import 'elements/inputs.styl'

@import 'objects/section.styl'

.section-edit
	&__title
		margin 1rem
		display flex
		align-items center
		.fa
			cursor pointer
			padding: .5rem 1rem;
	&__form
		margin 1rem

.account
	max-width max-width
	margin auto
	display flex
	position relative
	&__menu
		padding-top 3.25rem
		position absolute
		display none
		.filter
			margin 1rem
			border solid 1px #ddd
			width auto
	&__data
		flex 1

@media (min-width: tablet-medium)
	.section-edit
		&__title
			.fa
				display none
	.account
		&__menu
			display block
			position initial


.Profile
	// padding 1rem
	.checkbox
		margin-left: 1rem;
	.Profile-section
		// margin 1rem
		margin 1.5rem
		// background blue
	.Profile-section-title
		color: #585858;
		font-weight: 600;
		font-size: 0.85rem;
		letter-spacing: 1px;
		font-family: 'Raleway';
		text-transform: uppercase;
