/*------------------------------------*
	$ ACCOUNT-MENU
*------------------------------------*/
.account-menu
	position absolute
	bottom 0
	right 1rem
	transform translate(0, 100%)
	flex-direction column
	background white
	z-index 1
	font-family 'Roboto Condensed'
	font-weight 300
	font-size .9rem
	padding .5rem
	letter-spacing 1px
	border solid 1px #eee
	display none
	&.visible
		display flex
	&__item
		color #333
		padding .5rem
		&:hover
			color black
		b
			font-weight 400


/*------------------------------------*
	$ SINGLE-MENU
*------------------------------------*/
.single-menu
	font-size .9rem
	letter-spacing .5px
	font-family 'Roboto Condensed'
	&__item
		display table-cell
		padding 0 .5rem
		color #aaa
		cursor pointer
		&.selected
			color #000
		&:not(:first-child)
			border-left solid 1px #666