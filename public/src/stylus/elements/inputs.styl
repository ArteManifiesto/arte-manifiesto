/*------------------------------------*
	$ FORM CONTAINER
*------------------------------------*/
.form-container
	border solid 1px #ddd
	// box-shadow rgba(0,0,0,0.35) 0 0 10px
	box-shadow 0 1px 2px 1px rgba(0,0,0,0.1)
	border 1px solid #d8dae4
	background white
	.input-container
		display flex
		align-items center
		padding 2rem 1rem
		border-bottom solid 1px #ddd
		label
			color #585858
			font-weight 600
			font-size 0.85rem
			letter-spacing 1px
			font-family 'Raleway'
			text-transform uppercase
			min-width 9rem
		.avatars
			display flex
			width 100%
			justify-content space-around
			.input-radio
				margin-bottom .5rem
			img
				max-width 6rem
				border-radius 50%
				margin auto
				display block
			
	.button-solid
		margin 1.5rem auto
		display table

.shipping-form
	border solid 1px #ddd
	box-shadow rgba(0,0,0,0.35) 0 0 10px
	padding 1rem
	display flex
	flex-direction column
	font-family: 'Oswald';
	letter-spacing: 0.75px;
	color: #585858;
	.title
		font-size: 1.15rem;
		padding: .5rem;
	.input-container
		padding .5rem
		label
			margin-bottom: .25rem;
			display: block;
			font-size: .9rem;
		.input
			font-size: .85rem;
	.button-solid
		margin: 1rem 0.5rem;
		font-size: .9rem;
