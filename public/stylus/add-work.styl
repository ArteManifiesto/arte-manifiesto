/*------------------------------------*
	$ ADD WORK
*------------------------------------*/
@import 'base.styl'

@import 'elements/buttons.styl'
@import 'elements/inputs.styl'


.add-work
	max-width max-width
	margin auto
	&__data
		margin .5rem
		.title
			margin .25rem 0
			font-family 'Roboto Condensed'
			color #444
			letter-spacing .75px
		.input
			margin .25rem 0
		.checkbox-list
			margin .25rem 0
			

.upload-images
	display flex
	justify-content center
	.upload-image
		height 300px
		width 300px
		margin 1rem
		display flex
		img
			width auto
			max-width 100%
			max-height 100%
			// margin auto
			// max
	

.work-data
	&__input
		padding .5rem
		
@media (min-width: desktop)
	.work-data
		display flex
		flex-wrap wrap
		&__input
			flex 1 50%
			

.checkbox-list
	// max-height 100px
	// overflow auto
	// display table
	&__item
		display flex
		align-items center
		padding .25rem
		font-family 'Raleway'
		cursor pointer
		font-size .8rem
		letter-spacing 1px
		&:hover
			background #eee
		span
			padding-left .25rem
			
.radio-list
	display flex
	align-items center
	font-family 'Raleway'
	font-size .8rem
	label
		padding-right .5rem
