/*------------------------------------*
	$ LOGIN MODAL
*------------------------------------*/
.login-modal
	position absolute
	top 0
	bottom 0
	width 100%
	background rgba(black, .6)
	padding 3rem 1.5rem
	overflow auto
	display none
		
		
/*------------------------------------*
	$ LOGIN BOX
*------------------------------------*/
.login-box
	background white
	max-width 400px
	margin auto
	padding 1rem 1.5rem
	position relative
	&__header
		display flex
		justify-content center
		padding .5rem
	&__form
		.facebook-button
			margin 1rem 0
		.input
		.separator-text
		.button-solid
			margin .5rem 0
		.question
			margin 1rem 0
			// input
			// 	padding-top .5rem
		.note
			margin 1rem 0
			font-style italic
	&__closed
		position absolute
		top 0
		right 0
		transform translate(75%, -75%)
		color white
		font-size 1.25rem
		padding .5rem
		cursor pointer
