.flash-message-container
	max-width max-width
	margin auto
	display none
	
.flash-message
	text-align center
	position relative
	margin 0 1rem
	padding .5rem
	&.error
		background #fae7c8
		color #ce6637
	&.success
		background rgba(green, .4)
		color white
	.text
		font-family Arial
		font-size .9rem
		letter-spacing 1px
	.fa
		position absolute
		top .5rem
		right .5rem