/*------------------------------------*
	$ PRODUCTS
*------------------------------------*/

.products
	margin .5rem
	display flex
	flex-wrap wrap
	.product-wrapper
		padding .5rem

// product-width = 200px
product-width = 180px

@media screen and (min-width: product-width*2)
	.products
		display flex
		flex-wrap wrap
		.product-wrapper
			flex 1 50%
			max-width 50%
			
@media screen and (min-width: product-width*3)
	.products
		.product-wrapper
			flex 1 33.333%
			max-width 33.333%
			
@media screen and (min-width: product-width*4)
	.products
		.product-wrapper
			flex 1 25%
			max-width 25%

@media screen and (min-width: product-width*5)
	.products
		.product-wrapper
			flex 1 20%
			max-width 20%
