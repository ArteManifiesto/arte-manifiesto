html
	height 100%
	font-size 90%

@media (min-width: tablet-medium)
	html
		font-size 100%
		
body
	height 100%

.main-wrapper
	min-height 100%
	display flex
	flex-direction column
	&__content
		flex 1
		display flex
		flex-direction column
		
.background-container
	flex 1
	background-image url('/img/background1.jpg')
	background-size cover
	background-position center center