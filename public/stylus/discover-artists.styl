.artists
	max-width max-width
	margin auto
	
.artists-container
	display flex
	max-width max-width
	margin auto
	padding 0 .5rem
	&__artists
		flex 1
	&__left-filters
	&__right-filters
		width 0
		overflow hidden
		transition width .5s
	&__left-filters.visible
	&__right-filters.visible
		width auto
