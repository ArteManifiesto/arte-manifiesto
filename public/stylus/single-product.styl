			// 			border-radius 50%
				
										
@media (min-width: tablet)
	.single-product
		&__header
			display flex
			justify-content center
		&__info
			display flex
			justify-content center
			align-items center
			max-width 800px
			margin auto
			&__image
				flex 2
			&__data
				flex 1
				.actions
					border solid 1px #ccc
					margin .5rem
					padding 1rem
