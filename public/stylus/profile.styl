/*------------------------------------*
	$ PROFILE
*------------------------------------*/
@import 'base.styl'

/*------------------------------------*
	$INT TO STRING
*------------------------------------*/
str(x)
	return '' + unit(x, '')
	
@import 'elements/buttons.styl'

@import 'objects/works.styl'
@import 'objects/products.styl'
@import 'objects/users.styl'
@import 'objects/collections.styl'


.profile
	background #f6f6f6
	overflow hidden
	&__information
		max-width max-width
		margin 1.5rem auto
		display flex
		align-items center
	&__avatar
		margin 0 1rem
		width 5rem
		img
			border-radius 50%
	&__data
		.profile__info
			margin-top .75rem
			display flex
			align-items center
			.skinny-text
				padding-right 1rem
	&__elements
		background white
		border-top solid 1px #ddd
		min-height 200px
		overflow hidden
	&__element
		display none
		max-width max-width
		margin auto

.loading
	text-align center
	font-size 1.5rem
	color #aaa
	margin 3rem 1rem
	display none
	.fa
		animation 1.5s circle infinite
		
.more
	padding 1rem 0
	text-align center
	background white
	&.hidden
		display none
			
@keyframes circle
	0%
		transform rotate(0)
	50%
		transform rotate(-180deg)
	100%
		transform rotate(-360deg)

.empty
	display none
	text-align center
	color #aaa
	margin 3rem 1rem
	font-family 'Raleway'
	font-family 'Roboto Condensed'
	text-transform uppercase
	font-size 1.5rem

@media (min-width: tablet)
	.profile
		&__avatar
			width 7rem
			img
				border solid 5px #ccc

@media (min-width: tablet-medium)
	.profile
		&__avatar
			width 9rem