/*------------------------------------*
	$ SKINNY MENU
*------------------------------------*/
.skinny-menu
	display flex
	align-items center
	font-size .8rem
	letter-spacing 2px
	font-family 'Raleway'
	text-transform uppercase
	&__item
		color #000
		padding .5em 1rem
		cursor pointer
		&__icon
			font-size .9rem
		&.active
			border-bottom .25em solid #000
	&__avatar
		padding 0 1rem
		cursor pointer
	
.skinny-menu[data-icon='true']
	.skinny-menu__item__text
		display none

@media (min-width tablet)
	.skinny-menu[data-icon='true']
		.skinny-menu__item__text
			display inline
		.skinny-menu__item__icon
			display none
			
			
/*------------------------------------*
	$ THICK-MENU
*------------------------------------*/
.thick-menu
	// display flex
	font-weight 600
	letter-spacing 2px
	font-family 'Raleway'
	text-transform uppercase
	white-space nowrap
	overflow auto
	&::-webkit-scrollbar
		display none	
	&__item
		color #000
		padding-top .5rem
		padding-bottom .5rem
		display table-cell
		&:not(:first-child)
			padding-left 1rem
		&:not(:last-child)
			padding-right 1rem
		// padding .5rem 1rem
			
.carousel-thick-menu
	height 2rem
	overflow hidden
	max-width max-width
	margin auto
	padding 0 1rem
	

/*------------------------------------*
	$ SQUARE-MENU
*------------------------------------*/
.square-menu
	letter-spacing: 1px;
	font-family: 'Oswald';
	color #333
	white-space nowrap
	overflow auto
	&__element
		display: table-cell;
	&__item
		margin .25rem .5rem
		padding .5rem
		border solid 1px #ddd
			
.carousel-square-menu
	font-family: 'Oswald';
	max-width max-width
	overflow hidden
	height 3rem