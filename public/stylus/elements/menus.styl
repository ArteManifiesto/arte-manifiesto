/*------------------------------------*
	$ THICK-MENU
*------------------------------------*/
.thick-menu-container
	display block
	font-weight 600
	letter-spacing 2px
	font-family 'Raleway'
	text-transform uppercase
	white-space nowrap
	overflow auto
	&::-webkit-scrollbar
		display none

.thick-menu
	display table
	margin auto
	&__item
		color #333
		padding-top .75rem
		padding-bottom .75rem
		display table-cell
		cursor pointer
		&:not(:first-child)
			padding-left 1rem
		&:not(:last-child)
			padding-right 1rem
		&.selected
			background #f6f6f6
			border-left 1px solid #eee
			border-right 1px solid #eee
			
			
/*------------------------------------*
	$ SKINNY MENU
*------------------------------------*/
.skinny-menu
	display flex
	align-items center
	font-size .8rem
	letter-spacing 2px
	font-family 'Raleway'
	text-transform uppercase
	&__item
		color #333
		padding .5em 1rem
		cursor pointer
		&__icon
			font-size .9rem
		&.active
			border-bottom .25em solid #000
	&__avatar
		padding 0 1rem
		cursor pointer
	
.skinny-menu[data-icon='true']
	.skinny-menu__item__text
		display none

@media (min-width tablet)
	.skinny-menu[data-icon='true']
		.skinny-menu__item__text
			display inline
		.skinny-menu__item__icon
			display none
			