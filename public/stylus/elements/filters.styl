
.filters
	margin auto
	margin-top 3rem
	display flex
	flex-wrap wrap
	max-width max-width
	justify-content space-between
	align-items: center;
	&__search
		flex 100%
		padding .5rem 1rem
	&__category
	&__order
		margin 0 1rem

@media (min-width: 720px)
	.filters
		&__category
			order 1
		&__search
			order 2
			flex auto
		&__order
			order 3

@media (min-width: 720px)
	.search
		max-width 400px
		margin auto

.categories
	margin 1rem .5rem
	// width 100%
	border solid 1px #ddd
	font-family 'Raleway'
	font-size .8rem
	// min-width 9.25rem
	overflow hidden
	&__title
		padding .5rem 1rem
		font-weight 600
	.categorie
		padding .5rem 1rem
		cursor pointer
		&.selected
			background rgba(black, .1)
			
.works-container
	display flex
	max-width max-width
	margin auto
	padding 0 .5rem
	&__works
		flex 1
	&__left-filters
	&__right-filters
		// width 50px
		// width 0
		// width auto
		// display flex
		overflow hidden
		transition width .5s
	&__left-filters.visible
	&__right-filters.visible
		width auto
		// width 150px