
.filters-menu
	margin auto
	// margin-top 3rem
	display flex
	flex-wrap wrap
	max-width max-width
	justify-content space-between
	align-items: center;
	&__search
		flex 100%
		padding .5rem 1rem
	&__category
	&__order
		margin 0 1rem

@media (min-width: 720px)
	.filters-menu
		&__category
			order 1
		&__search
			order 2
			flex auto
		&__order
			order 3

@media (min-width: 720px)
	.search
		max-width 400px
		margin auto



.filters
	margin 1rem .5rem
	// width 100%
	border solid 1px #ddd
	font-family 'Raleway'
	font-size .8rem
	min-width 9.25rem
	overflow hidden
	&__title
		padding .5rem 1rem
		font-weight 600
		border-bottom solid 1px #ddd
		// background rgba(black, .1)
	.filter
		padding .5rem 1rem
		cursor pointer
		&.selected
			background rgba(black, .1)
			// font-weight bold